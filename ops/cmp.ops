  }
  goto NEXT();
}

op ne_addr(in STR, in STR, inconst INT) {
  if ($1 != $2) {
    goto OFFSET($3);
  }
  goto NEXT();
}

op ne_addr(in PMC, in PMC, inconst INT) {
  if ($1 != $2) {
    goto OFFSET($3);
  }
  goto NEXT();
}

