#include <stdio.h>
#include <signal.h>

int
main(int argc, char **argv)
{
    struct sigaction old_sa, new_sa;

    sigemptyset(&new_sa.sa_mask);
    sigaction(SIGFPE, NULL, &old_sa);
    puts("ok");
    return 0;
}

