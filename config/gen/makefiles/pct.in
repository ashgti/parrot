# $Id$

# Setup some commands
LN_S     = @lns@
PERL     = @perl@
RM_F     = @rm_f@
PARROT   = ../../parrot@exe@
TOOL_DIR = ../..
TGE_DIR  = ../../compilers/tge
PGE_DIR  = ../../compilers/pge
TEST_DIR = ../../t/compilers/past-pm
CP       = @cp@
BUILD    = $(PERL) @build_dir@/tools/build/dynpmc.pl
O        = @o@
LOAD_EXT = @load_ext@
PARROT_DYNEXT = @build_dir@/runtime/parrot/dynext

# Where to put things
PARROT_LIBRARY    = ../../runtime/parrot/library

# the default target
all: $(PARROT_LIBRARY)/PCT.pbc 

SOURCES = PCT.pir \
  src/Grammar.pir \
  src/HLLCompiler.pir \
  src/PAST/Compiler.pir \
  src/PAST/Node.pir \
  src/POST/Compiler.pir \
  src/POST/Grammar.tg \
  src/POST/Node.pir \


$(PARROT_LIBRARY)/PCT.pbc: PCT.pbc
	$(CP) PCT.pbc $(PARROT_LIBRARY)/PCT.pbc

PCT.pbc: $(PARROT) $(SOURCES)
	$(RM_F) PCT.pbc $(PARROT_LIBRARY)/PCT.pbc
	$(PARROT) $(TGE_DIR)/tgc.pir --output=src/POST/Grammar_gen.pir src/POST/Grammar.tg
	$(PARROT) -o PCT.pbc --output-pbc PCT.pir

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:               PCT.pbc"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: all 
	cd $(TOOL_DIR); prove -r t/compilers/pct

testclean:
	$(RM_F) $(TEST_DIR)/*.pir \
	    $(TEST_DIR)/*.pbc

clean: testclean
	$(RM_F) \
    PCT.pbc \
    $(PARROT_LIBRARY)/PCT.pbc \
    src/POST/Grammar_gen.pir

realclean: clean
	$(RM_F) Makefile

distclean: realclean
