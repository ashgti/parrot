co-dotnet:
	- $(SVN) checkout 'https:////svn.parrot.org//languages//dotnet//trunk' dotnet

up-dotnet:
	cd dotnet && $(SVN) up

co-c99:
	- $(SVN) checkout 'https:////svn.parrot.org//languages//c99//trunk' c99

up-c99:
	cd c99 && $(SVN) up

