# Setup some commands
LN_S     = @lns@
PERL     = @perl@
RM_RF    = @rm_rf@
PARROT   = ..@slash@..@slash@parrot@exe@
TOOL_DIR = ..@slash@..
PGE_DIR  = ..@slash@..@slash@compilers@slash@pge
TGE_DIR  = ..@slash@..@slash@compilers@slash@tge
CP       = @cp@

all: perl6.pbc

SOURCES = perl6.pir \
  lib/grammar.pge \
  lib/parse.pir \
  lib/pge2past.tge \
  lib/past2pir.tge \
  lib/PAST.pir \
  lib/main.pir \
  lib/builtins.pir 

# the default target
perl6.pbc: $(PARROT) $(SOURCES)
	$(PARROT) $(PGE_DIR)@slash@rulec.pir --output=lib/grammar.pir lib/grammar.pge
	$(PARROT) $(TGE_DIR)@slash@tgc.pir --output=lib/pge2past.pir lib/pge2past.tge
	$(PARROT) $(TGE_DIR)@slash@tgc.pir --output=lib/past2pir.pir lib/past2pir.tge
	$(PARROT) -o perl6.pbc perl6.pir

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:               perl6.pbc"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: all
	echo "XXX: Todo - not yet implemented"

testclean:
	echo "XXX: Todo - not yet implemented"

clean: 
	$(RM_RF) perl6.pbc lib@slash@grammar.pir

realclean: clean
	$(RM_RF) Makefile

distclean: realclean
