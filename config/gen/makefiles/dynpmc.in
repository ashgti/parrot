	$(CC) -c @cc_o_out@sha$(O) $(INCLUDES) $(CFLAGS) sha.c

sha.c: sha.dump
	$(PMC2CC) sha.pmc

sha.dump: sha.pmc
	$(PMC2CD) sha.pmc

sha1$(O): sha1.c
	$(CC) -c @cc_o_out@sha1$(O) $(INCLUDES) $(CFLAGS) sha1.c

sha1.c: sha1.dump
	$(PMC2CC) sha1.pmc

sha1.dump: sha1.pmc
