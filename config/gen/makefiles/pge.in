# $Id$

# Setup some commands
LN_S     = ${lns}
PERL     = ${perl}
PARROT  = .${slash}parrot${exe}
MYPATH  = compilers${slash}pge${slash}
RELPATH = ..${slash}..${slash}
TESTPATH = t${slash}p6rules${slash}
RM_RF    = ${rm_rf}
CP       = ${cp}

# Where to put things
PARROT_LIBRARY    = runtime${slash}parrot${slash}library

# the default target
all: $(RELPATH)$(PARROT_LIBRARY)${slash}PGE.pbc

$(RELPATH)$(PARROT_LIBRARY)${slash}PGE.pbc: PGE.pbc
	$(CP) PGE.pbc $(RELPATH)$(PARROT_LIBRARY)

PGE.pbc: PGE.pir PGE/Exp.pir PGE/Match.pir PGE/P6Rule.pir PGE/TokenHash.pir
	(cd $(RELPATH) && $(PARROT) --output=$(MYPATH)PGE.pbc $(MYPATH)PGE.pir)

PGE-Hs.pbc: PGE.pir PGE/Exp.pir PGE/Match.pir PGE/P6Rule.pir PGE/TokenHash.pir PGE/Hs.pir
	(cd $(RELPATH) && $(PARROT) --output=$(MYPATH)PGE-Hs.pbc $(MYPATH)PGE/Hs.pir)

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:               PGE.pbc"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Remove everything not in MANIFEST."
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: all
	(cd $(RELPATH) && $(PERL) -Ilib t/harness $(TESTPATH)/*.t)

testclean:
	(cd $(RELPATH) && $(RM_RF) $(TESTPATH)/*.pir $(TESTPATH)/*.pasm)

clean: testclean
	$(RM_RF) PGE.pbc

realclean: clean
	$(RM_RF) Makefile

distclean: realclean
