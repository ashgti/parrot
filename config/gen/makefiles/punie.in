# $Id$

# Setup some commands
LN_S     = @lns@
PERL     = @perl@
RM_F     = @rm_f@
PARROT   = ..@slash@..@slash@parrot@exe@
PGE_DIR  = ..@slash@..@slash@compilers@slash@pge
TGE_DIR  = ..@slash@..@slash@compilers@slash@tge
CP       = @cp@

# the default target
all: punie.pbc

lib/PunieGrammar.pbc: lib/PunieGrammar.pir lib/punie.g
	$(PARROT) $(PGE_DIR)@slash@rulec.pir --output=lib/punie_grammar_gen.pir lib/punie.g
	$(PARROT) -o lib/PunieGrammar.pbc --output-pbc lib/PunieGrammar.pir 

lib/ASTGrammar.pbc: lib/ASTGrammar.pir lib/pge2past.g
	$(PARROT) $(TGE_DIR)@slash@tgc.pir --output=lib@slash@pge2past_gen.pir lib@slash@pge2past.g
	$(PARROT) -o lib@slash@ASTGrammar.pbc --output-pbc lib@slash@ASTGrammar.pir 

lib/OSTGrammar.pbc: lib/OSTGrammar.pir lib/past2post.g
	$(PARROT) $(TGE_DIR)@slash@tgc.pir --output=lib@slash@past2post_gen.pir lib@slash@past2post.g
	$(PARROT) -o lib@slash@OSTGrammar.pbc --output-pbc lib@slash@OSTGrammar.pir 

lib/PIRGrammar.pbc: lib/PIRGrammar.pir lib/post2pir.g
	$(PARROT) $(TGE_DIR)@slash@tgc.pir --output=lib@slash@post2pir_gen.pir lib@slash@post2pir.g
	$(PARROT) -o lib@slash@PIRGrammar.pbc --output-pbc lib@slash@PIRGrammar.pir 

punie.pbc: punie.pir lib/PunieGrammar.pbc lib/ASTGrammar.pbc lib/OSTGrammar.pbc lib/PIRGrammar.pbc
	$(PARROT) -o punie.pbc --output-pbc punie.pir 

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:               punie.pbc"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: all
	$(PERL) -Ilib t/harness t/*.t

testclean:
	$(RM_F) "t/*.p1" "t/*.out" "t/*.pir"

clean: testclean
	$(RM_F) punie.pbc \
	lib/punie_grammar_gen.pir \
	lib/PunieGrammar.pbc \
	lib/ASTGrammar.pbc \
	lib/pge2past_gen.pir \
	lib/OSTGrammar.pbc \
	lib/past2post_gen.pir \
	lib/PIRGrammar.pbc \
	lib/post2pir_gen.pir

realclean: clean
	$(RM_F) Makefile

distclean: realclean
