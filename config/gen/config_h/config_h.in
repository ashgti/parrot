#endif
#else
#if defined(__cplusplus)
#  define PARROT_EXPORT extern "C" @sym_export@
#  define PARROT_DATA extern "C" @sym_export@
#else
#  define PARROT_EXPORT @sym_export@
#  define PARROT_DATA extern @sym_export@
#endif
#endif

