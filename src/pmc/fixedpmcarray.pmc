        PMC *val;

        val = pmc_new(INTERP,
                Parrot_get_ctx_HLL_type(INTERP,
                    enum_class_String));
        VTABLE_set_string_native(INTERP, val, value);
        /* Let set_pmc_keyed worry about multi keys */
