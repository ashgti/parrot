INCLUDE_DIR     = @include_dir@
DOC_DIR         = @doc_dir@
INC_DIR         = @inc@
RM_F             = @rm_f@
RM_RF            = @rm_rf@
AR_CR            = @ar@ @ar_flags@
RANLIB           = @ranlib@
