    void repeat (PMC * value, PMC* dest) {
	dest->vtable = &Parrot_base_vtables[enum_class_PerlString];
	dest->cache.struct_val =
           string_repeat(INTERP, SELF->cache.struct_val,
	                 (UINTVAL)value->vtable->get_integer(INTERP, value), NULL
	                );
    }

