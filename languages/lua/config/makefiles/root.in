RM_F    = @rm_f@
PERL    = @perl@
PARROT  = ..@slash@..@slash@parrot@exe@
PBC_MERGE = ..@slash@..@slash@pbc_merge@exe@
PGE      = $(PARROT) ..@slash@..@slash@compilers@slash@pge@slash@pgc.pir
TGE      = $(PARROT) ..@slash@..@slash@compilers@slash@tge@slash@tgc.pir

LIBPATH  = lib
BUILD    = $(PERL) @build_dir@@slash@tools@slash@build@slash@dynpmc.pl
O        = @o@
CLASSDIR = pmc
LOAD_EXT = @load_ext@
PARROT_DYNEXT = @build_dir@@slash@runtime@slash@parrot@slash@dynext

PMCS = \
 lua \
 luabase \
 luaboolean \
 luafunction \
 luanil \
 luanumber \
 luastring \
 luatable \
 luathread \
 luauserdata

PBCS = \
 $(LIBPATH)@slash@luabasic.pbc \
 $(LIBPATH)@slash@luacoroutine.pbc \
 $(LIBPATH)@slash@luapackage.pbc \
 $(LIBPATH)@slash@luastring.pbc \
 $(LIBPATH)@slash@luatable.pbc \
 $(LIBPATH)@slash@luamath.pbc \
 $(LIBPATH)@slash@luaio.pbc \
 $(LIBPATH)@slash@luaos.pbc \
 $(LIBPATH)@slash@luadebug.pbc \
 $(LIBPATH)@slash@luaaux.pbc

GEN_PIR = \
 src@slash@lua51_grammar_gen.pir \
 src@slash@lua51_testlex_gen.pir \
 src@slash@dumplex_gen.pir

GEN_PBC = \
 src@slash@Lua51.pbc \
 src@slash@Lua51TestLex.pbc \
 src@slash@LuaDumpLex.pbc

all: pmcs $(PBCS) $(GEN_PBC) Lua@slash@parser.pm

src@slash@lua51_grammar_gen.pir: src@slash@lua51.pg
	$(PGE) --output=src@slash@lua51_grammar_gen.pir src@slash@lua51.pg

src@slash@Lua51.pbc: src@slash@Lua51.pir src@slash@lua51_grammar_gen.pir src@slash@parse.pir
	$(PARROT) -o src@slash@Lua51.pbc --output-pbc src@slash@Lua51.pir


src@slash@lua51_testlex_gen.pir: src@slash@lua51_testlex.pg
	$(PGE) --output=src@slash@lua51_testlex_gen.pir src@slash@lua51_testlex.pg

src@slash@Lua51TestLex.pbc: src@slash@lua51_testlex_gen.pir
	$(PARROT) -o src@slash@Lua51TestLex.pbc --output-pbc src@slash@lua51_testlex_gen.pir

src@slash@dumplex_gen.pir: src@slash@dumplex.tg
	$(TGE) --output=src@slash@dumplex_gen.pir src@slash@dumplex.tg

src@slash@LuaDumpLex.pbc: src@slash@dumplex_gen.pir
	$(PARROT) -o src@slash@LuaDumpLex.pbc --output-pbc src@slash@dumplex_gen.pir


pmcs:
	@cd $(CLASSDIR) && $(BUILD) generate $(PMCS)
	@cd $(CLASSDIR) && $(BUILD) compile $(PMCS)
	@cd $(CLASSDIR) && $(BUILD) linklibs $(PMCS)
	@cd $(CLASSDIR) && $(BUILD) copy "--destination=$(PARROT_DYNEXT)" $(PMCS)

$(LIBPATH)@slash@luabasic.pbc: $(LIBPATH)@slash@luabasic.pir
	$(PARROT) --output=$(LIBPATH)@slash@luabasic.pbc $(LIBPATH)@slash@luabasic.pir

$(LIBPATH)@slash@luacoroutine.pbc: $(LIBPATH)@slash@luacoroutine.pir
	$(PARROT) --output=$(LIBPATH)@slash@luacoroutine.pbc $(LIBPATH)@slash@luacoroutine.pir

$(LIBPATH)@slash@luapackage.pbc: $(LIBPATH)@slash@luapackage.pir
	$(PARROT) --output=$(LIBPATH)@slash@luapackage.pbc $(LIBPATH)@slash@luapackage.pir

$(LIBPATH)@slash@luastring.pbc: $(LIBPATH)@slash@luastring.pir
	$(PARROT) --output=$(LIBPATH)@slash@luastring.pbc $(LIBPATH)@slash@luastring.pir

$(LIBPATH)@slash@luatable.pbc: $(LIBPATH)@slash@luatable.pir
	$(PARROT) --output=$(LIBPATH)@slash@luatable.pbc $(LIBPATH)@slash@luatable.pir

$(LIBPATH)@slash@luamath.pbc: $(LIBPATH)@slash@luamath.pir
	$(PARROT) --output=$(LIBPATH)@slash@luamath.pbc $(LIBPATH)@slash@luamath.pir

$(LIBPATH)@slash@luaio.pbc: $(LIBPATH)@slash@luaio.pir
	$(PARROT) --output=$(LIBPATH)@slash@luaio.pbc $(LIBPATH)@slash@luaio.pir

$(LIBPATH)@slash@luaos.pbc: $(LIBPATH)@slash@luaos.pir
	$(PARROT) --output=$(LIBPATH)@slash@luaos.pbc $(LIBPATH)@slash@luaos.pir

$(LIBPATH)@slash@luadebug.pbc: $(LIBPATH)@slash@luadebug.pir
	$(PARROT) --output=$(LIBPATH)@slash@luadebug.pbc $(LIBPATH)@slash@luadebug.pir

$(LIBPATH)@slash@luaaux.pbc: $(LIBPATH)@slash@luaaux.pir
	$(PARROT) --output=$(LIBPATH)@slash@luaaux.pbc $(LIBPATH)@slash@luaaux.pir

Lua@slash@parser.pm: Lua@slash@lua51.yp
	yapp -s -v -m Lua::parser -o Lua/parser.pm Lua/lua51.yp

help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test:
	cd .. && $(PERL) t/harness --languages=lua

TEST_CLEANERS = \
 "t/pmc/*.pir" \
 "t/*.pir" \
 "t/*.lua" \
 "t/*.orig_out" \
 "t/*.parrot_out"

testclean:
	$(RM_F) $(TEST_CLEANERS)

BUILD_CLEANERS = \
 $(GEN_PIR) \
 "src/*.pbc" \
 "$(CLASSDIR)/*.dump" \
 "$(CLASSDIR)/*.c" \
 "$(CLASSDIR)/*.h" \
 "$(CLASSDIR)/*$(LOAD_EXT)" \
 "$(CLASSDIR)/*$(O)" \
 "$(LIBPATH)/*.pbc"

clean:
	$(RM_F) $(BUILD_CLEANERS) $(TEST_CLEANERS)

distclean: clean
	$(RM_F) Makefile
