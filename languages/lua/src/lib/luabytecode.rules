## Jumps and Calls

[JMP]
code = 22
format = sBx
pir = <<PIR
    $I0 = ${NEXTPC} + ${B}
    $S0 = $I0
    ${INS} = concat "  goto PC"
    ${INS} = concat $S0
    ${INS} = concat "\n"
PIR

[CALL]
code = 28
format = ABC
pir = <<PIR
    ${INS} = concat "  "
    if ${C} goto ${LABEL}_1
    ${INS} = concat "(\$P0 :slurpy) = "
    goto ${LABEL}_2
  ${LABEL}_1:
    if ${C} == 1 goto ${LABEL}_2
    ${INS} = concat "("
    $I0 = ${A}
    $I1 = ${C} - 1
    $I2 = 1
  ${LABEL}_3:
    unless $I1 goto ${LABEL}_4
    if $I2 goto ${LABEL}_5
    ${INS} = concat ", "
  ${LABEL}_5:
    $I2 = 0
    ${INS} = concat "${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    inc $I0
    dec $I1
    goto ${LABEL}_3
  ${LABEL}_4:
    ${INS} = concat ") = "
  ${LABEL}_2:
    ${INS} = concat "${REG}"
    $S0 = ${A}
    ${INS} = concat $S0
    ${INS} = concat "("
    if ${B} goto ${LABEL}_6
    ${INS} = concat "\$P0 :flat"
    goto ${LABEL}_7
  ${LABEL}_6:
    if ${B} == 1 goto ${LABEL}_7
    $I0 = ${A} + 1
    $I1 = ${B} - 1
    $I2 = 1
  ${LABEL}_8:
    unless $I1 goto ${LABEL}_7
    if $I2 goto ${LABEL}_9
    ${INS} = concat ", "
  ${LABEL}_9:
    $I2 = 0
    ${INS} = concat "${REG}"
    $S0 = $I0
    ${INS} = concat $S0
    inc $I0
    dec $I1
    goto ${LABEL}_8
  ${LABEL}_7:
    ${INS} = concat ")\n"
PIR

