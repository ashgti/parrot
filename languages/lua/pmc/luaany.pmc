#include "parrot/parrot.h"

static INTVAL dynpmc_LuaBoolean;
static INTVAL dynpmc_LuaNil;
static INTVAL dynpmc_LuaString;

static PMC *
find_meth(Interp* interp, PMC *obj, const char *name) {
    PMC *meta = NULL;

    if (dynpmc_LuaString == obj->vtable->base_type) {
        meta = Parrot_find_global_cur(interp,
                                      const_string(interp, "mt_string"));
    }
    else if (VTABLE_isa(interp, obj, const_string(interp, "base_lua"))) {
        meta = VTABLE_getprop(interp, obj,
                              const_string(interp, "__metatable"));
        if (meta != NULL && meta->pmc_ext != NULL
         && !VTABLE_isa(interp, meta, const_string(interp, "table"))) {
            meta->vtable->isa(interp, meta, const_string(interp, "table"));
            return meta;
        }
    }
    if (meta != NULL && meta->pmc_ext != NULL) {
        PMC *method;
        PMC *key = pmc_new(interp, dynpmc_LuaString);
        PMC_str_val(key) = const_string(interp, name);
        method = VTABLE_get_pmc_keyed(interp, meta, key);
        if (dynpmc_LuaNil != method->vtable->base_type) {
            return method;
        }
    }
    return NULL;
}


