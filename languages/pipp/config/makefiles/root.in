# cleaning up
clean: clean-pmc clean-test clean-hash
	$(RM_F) \
  src/common/pipplib.pbc \
  src/common/*.pbc \
  src/pct/gen_grammar.pir \
  src/pct/gen_actions.pir \
  pipp.pbc \
  pipp.c \
  pipp.o \
  pipp$(EXE)

clean-pmc:
	$(RM_F) \
  "$(PMC_DIR)/*dump" \
  "$(PMC_DIR)/php*.c" \
  "$(PMC_DIR)/pmc_*h" \
  "$(PMC_DIR)/php_group.h" \
  "$(PMC_DIR)/*$(O)" \
  "$(PMC_DIR)/*$(LOAD_EXT)"


clean-test:
	$(RM_F) \
  t/php/*.php \
  t/php/*.pir \
  t/php/*.out \
  t/pmc/*.pir \
  pipp_test_run.tar.gz

clean-hash:
	$(RM_F) "$(HASH_OBJS)"

realclean: clean
	$(RM_F) Makefile

