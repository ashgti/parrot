use sys;

var int m, n, r;

m = 96;
n = 64;

sys::print("Algorithm E (Euclid's algorithm)\n");
sys::print("  Calculating gcd($m, $n) = ...\n");

r = m % n;
while (r != 0) {
  m = n;
  n = r;
  r = m % n;
} 

sys::print("  ... = $n\n");

