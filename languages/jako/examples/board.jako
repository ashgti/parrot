use sys;

var int rank, file;
var int temp;

rank = 7;

sys::print("  +---+---+---+---+---+---+---+---+\n");

while(rank >= 0) {
  temp = rank + 1;
  file = 0;

  sys::print("$temp |");

  while(file < 8) {
    temp = rank + file;
    temp %= 2;
 
    if (temp == 1) {
      sys::print("   |");
    } else {
      sys::print(" * |");
    }

    file++;
  }

  sys::print("\n");
  sys::print("  +---+---+---+---+---+---+---+---+\n");
  rank--;
}

sys::print("    A   B   C   D   E   F   G   H  \n");

