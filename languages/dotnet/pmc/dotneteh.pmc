        result = (INTVAL)eh->class_id;
        RETURN(INTVAL result);
    }


    /* Get filter handler's offset. */
    METHOD INTVAL get_filter_offset()
    {
        dotnet_eh *eh = (dotnet_eh *)PMC_struct_val(SELF);
