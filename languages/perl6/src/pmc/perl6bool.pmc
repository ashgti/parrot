pmclass Perl6Bool
    extends Boolean
    does boolean
    dynpmc
    group perl6_group
    hll Perl6
    maps Boolean {

    STRING* get_string() {
        PMC *class = GET_CLASS(PMC_data(SELF), SELF);
        if (class == SELF)
            return string_from_const_cstring(INTERP, "Str", 3);
        return SUPER();
    }

}

