##
# [time]

.namespace [ "Tcl" ]

.sub _time
  .local pmc argv 
  argv = foldup
 
  .local int argc 
  argc = argv

  .local pmc retval
  retval = new String
  .local int return_type
  return_type = TCL_OK

  .local pmc parse
  .local pmc interpret
  parse = find_global "_Tcl", "__parse"
  interpret = find_global "_Tcl", "__interpret"

  .local string script
  .local int count

  count = 1

  if argc == 1 goto run
  if argc == 2 goto twoargs

  return_type = TCL_ERROR
  retval =  "bad call to time"
  goto real_done

twoargs:
  # verify this is a number?
  count = argv[1]

run:
  script = argv[0]

  # is it cheating to parse it here?
  $P1 = parse(script,0,0)

  time $N1 
  $I1 = count
loop:
  if $I1 == 0 goto done
  ($I0,$P0) = interpret($P1)
  if $I0 != TCL_OK goto done
  dec $I1
  goto loop

done:
  time $N2
  $N3 = $N2 - $N1

  $N3 = $N3 * 1000000
  $N3 = $N3 / count
  $I2 = $N3
  retval = $I2
  retval = retval . " microseconds per iteration"

real_done:

  .pcc_begin_return
    .return return_type
    .return retval
  .pcc_end_return

.end
