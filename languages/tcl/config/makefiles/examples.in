PARROT = ..@slash@..@slash@..@slash@parrot@exe@
PARROT_ARRGS = --gc-debug

default:
	@echo "to run <foo>.tcl, type 'make <foo>'"
	@echo "to run an interactive tclsh, type 'make tclsh'"

%:%.tcl
	$(PARROT) $(PARROT_ARRGS)  ..@slash@tcl.pbc $@.tcl

tclsh:
	$(PARROT) $(PARROT_ARRGS) ..@slash@tcl.pbc

# (for development testing)
test:
	$(PARROT) -tf $(PARROT_ARRGS) ..@slash@tcl.pbc foo.tcl
