# Setup some commands
LN_S     = @lns@
PERL     = @perl@
RM_F     = @rm_f@
PARROT   = ..@slash@..@slash@parrot@exe@
PGE_DIR  = ..@slash@..@slash@compilers@slash@pge
CP       = @cp@

GENERATED = lib@slash@generated_APL_grammar.pir


.SUFFIXES : .pir .pbc

.pir.pbc :
	$(PARROT) -o $@ $<

# the default target
all: $(PARROT) \
  APL.pbc \
  lib@slash@PAST.pbc \
  lib@slash@POST.pbc \
  lib@slash@APLGrammar.pbc \
  lib@slash@APLOpLookup.pbc

$(GENERATED): lib@slash@APL.g
	$(PARROT) $(PGE_DIR)@slash@rulec.pir --encoding=utf8 --compiler=p6rules --output=$(GENERATED) lib@slash@APL.g 

lib@slash@APLGrammar.pbc: $(GENERATED)

APL.pbc: 

lib@slash@PAST.pbc: \
  lib@slash@PAST@slash@Code.pbc  \
  lib@slash@PAST@slash@Exp.pbc   \
  lib@slash@PAST@slash@Node.pbc  \
  lib@slash@PAST@slash@Op.pbc    \
  lib@slash@PAST@slash@Stmt.pbc  \
  lib@slash@PAST@slash@Stmts.pbc \
  lib@slash@PAST@slash@Sub.pbc   \
  lib@slash@PAST@slash@Val.pbc   \
  lib@slash@PAST@slash@Var.pbc

lib@slash@POST.pbc: \
  lib@slash@POST@slash@Node.pbc  \
  lib@slash@POST@slash@Op.pbc    \
  lib@slash@POST@slash@Ops.pbc   \
  lib@slash@POST@slash@Sub.pbc   \
  lib@slash@POST@slash@Val.pbc   \
  lib@slash@POST@slash@Var.pbc

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  all:               APL.pbc"
	@echo "                     This is the default."
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: all
	$(PERL) -Ilib t@slash@harness t@slash@*.t

testclean:
	$(RM_F) "t@slash@*.apl" "t@slash@*.out"

clean: testclean
	$(RM_F) \
  APL.pbc \
  $(GENERATED) \
  "lib@slash@*.pbc" \
  "lib@slash@PAST@slash@*.pbc" \
  "lib@slash@POST@slash@*.pbc"

realclean: clean
	$(RM_F) Makefile

distclean: realclean
