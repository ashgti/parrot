# Makefile for languages/scheme

# Setup of some commands
PERL          = @perl@
RM_F          = @rm_f@
BUILD_DIR     = @build_dir@
RECONFIGURE   = $(PERL) @build_dir@/tools/dev/reconfigure.pl


# The default target
default: build

help :
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  build:             Just check whether 'schemec' compiles"
	@echo "                     This is the default."
	@echo ""
	@echo "  test:              run the test suite,"
	@echo ""
	@echo "  clean:             clean up temporary files"
	@echo ""
	@echo "  realclean:         clean up generated files"
	@echo ""
	@echo "  help:              print this help message"

# regenerate the Makefile
Makefile: config/makefiles/root.in
	cd $(BUILD_DIR) && $(RECONFIGURE) --step=gen::languages --languages=scheme

# Compilation:
build:
	$(PERL) -c schemec

# cleaning up

clean:
	$(RM_F) foo.pasm foo.pbc \
  "t/*/*.pasm" \
  "t/*/*.pir" \
  "t/*/*.pbc" \
  "t/*/*.scheme" \
  "t/*/*.out"

realclean: clean
	$(RM_RF) Makefile

over:
	@$(MAKE) clean
	@$(MAKE) all

# testing
test:
	cd .. && $(PERL) scheme/t/harness
